{
  "name": "@moonwall/types",
  "type": "module",
  "version": "5.13.2-dev.4",
  "description": "Testing framework for the Moon family of projects",
  "author": "timbrinded",
  "license": "ISC",
  "homepage": "https://github.com/Moonsong-Labs/moonwall#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Moonsong-Labs/moonwall.git",
    "directory": "packages/types"
  },
  "bugs": {
    "url": "https://github.com/Moonsong-Labs/moonwall/issues"
  },
  "keywords": [
    "moonwall",
    "moonbeam",
    "moondance",
    "polkadot",
    "kusama",
    "substrate"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist",
    "bin",
    "*.d.ts",
    "*.mjs"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "build": "zshy",
    "postbuild": "bun generate-types",
    "generate-types": "tsc && bun schema",
    "lint": "bun biome lint ./src",
    "lint:fix": "bun biome lint ./src --apply",
    "fmt": "biome format ./src",
    "fmt:fix": "biome format src --write",
    "prepublish": "bun run build && bun run generate-types",
    "schema": "bun x typescript-json-schema --project tsconfig.schema.json --esModuleInterop --noExtraProps --ignoreErrors -o config_schema.json ./src/config.ts MoonwallConfig && bun biome format config_schema.json --write"
  },
  "zshy": {
    "exports": "./src/index.ts",
    "cjs": false
  },
  "dependencies": {
    "@polkadot/api": "^16.4.6",
    "@polkadot/api-base": "^16.4.6",
    "@polkadot/keyring": "^13.5.6",
    "@polkadot/types": "^16.4.6",
    "@polkadot/util": "^13.5.6",
    "@polkadot/util-crypto": "^13.5.6",
    "@types/node": "^24.4.0",
    "@zombienet/utils": "^0.0.29",
    "bottleneck": "^2.19.5",
    "ethers": "^6.15.0",
    "pino": "^9.9.5",
    "polkadot-api": "1.17.1",
    "viem": "2.37.6",
    "vitest": "3.2.4",
    "web3": "^4.16.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "tslib": "^2.8.1",
    "typescript": "5.9.2",
    "typescript-json-schema": "0.65.1",
    "zshy": "^0.4.1"
  },
  "main": "./dist/index.cjs"
}
