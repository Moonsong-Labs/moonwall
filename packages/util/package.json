{
  "name": "@moonwall/util",
  "type": "module",
  "version": "5.5.0",
  "description": "Testing framework for the Moon family of projects",
  "author": "timbrinded",
  "license": "ISC",
  "homepage": "https://github.com/Moonsong-Labs/moonwall#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Moonsong-Labs/moonwall.git",
    "directory": "packages/util"
  },
  "bugs": {
    "url": "https://github.com/Moonsong-Labs/moonwall/issues"
  },
  "keywords": [
    "moonwall",
    "moonbeam",
    "moondance",
    "polkadot",
    "kusama",
    "substrate"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "engines": {
    "node": ">=20",
    "pnpm": ">=7"
  },
  "files": [
    "dist",
    "bin",
    "*.d.ts",
    "*.mjs"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "build": "pnpm exec rm -rf dist && tsup src --format esm --no-splitting --sourcemap && pnpm generate-types",
    "generate-types": "tsc",
    "lint": "pnpm biome lint ./src",
    "lint:fix": "pnpm biome lint ./src --apply",
    "fmt": "biome format .",
    "fmt:fix": "biome format . --write",
    "watch": "tsup src --format esm --watch",
    "typecheck": "pnpm exec tsc --noEmit",
    "prepublish": "pnpm run build && pnpm run generate-types"
  },
  "dependencies": {
    "@moonbeam-network/api-augment": "*",
    "@moonwall/types": "workspace:*",
    "@polkadot/api": "*",
    "@polkadot/api-derive": "*",
    "@polkadot/keyring": "*",
    "@polkadot/util-crypto": "*",
    "@polkadot/rpc-provider": "*",
    "@polkadot/types": "*",
    "@polkadot/types-codec": "*",
    "@polkadot/util": "*",
    "bottleneck": "2.19.5",
    "chalk": "*",
    "clear": "0.1.0",
    "cli-progress": "3.12.0",
    "colors": "1.4.0",
    "debug": "4.3.7",
    "dotenv": "16.4.5",
    "ethers": "*",
    "inquirer": "*",
    "inquirer-press-to-continue": "1.2.0",
    "rlp": "3.0.0",
    "semver": "*",
    "viem": "*",
    "vitest": "*",
    "web3": "*",
    "ws":  "*",
    "yargs":  "*"
  },
  "devDependencies": {
    "@biomejs/biome":  "*",
    "@types/debug":  "*",
    "@types/node": "*",
    "@types/ws":  "*",
    "@types/yargs":  "*",
    "tsup": "*",
    "typescript": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
