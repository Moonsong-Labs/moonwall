{
  "name": "@moonsong-labs/moonwall-monorepo",
  "type": "module",
  "version": "0.3.0",
  "private": true,
  "description": "Testing framework for the Moon family of projects",
  "scripts": {
    "build": "pnpm -r --filter='./packages/**' run build",
    "generate-types": "pnpm -r --filter='./packages/**' run generate-types",
    "fmt": "biome format ./biome.json; pnpm -r --filter='./packages/**' run fmt",
    "fmt:fix": "biome format ./biome.json --write; pnpm -r --filter='./packages/**' run fmt:fix",
    "lint": "pnpm -r --filter='./packages/**' run lint",
    "lint:fix": "pnpm -r --filter='./packages/**' run lint:fix",
    "changeset": "changeset",
    "changeset:release": "sleep 1 && pnpm changeset publish",
    "changeset:version": "changeset version",
    "clean-all": "rm -rf node_modules && pnpm -r --filter='./packages/**' run clean && pnpm store prune",
    "pristine-build": "pnpm clean-all && pnpm i && pnpm build && pnpm generate-types",
    "start": "pnpm exec moonwall",
    "display-reports": "pnpm exec vite preview --base __vitest__ --outDir html",
    "test": "pnpm exec moonwall test 'basic chopsticks dev_seq chop_state_test'",
    "typecheck": "pnpm -r --filter='./packages/**' run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "2.28.1",
    "@types/node": "22.13.17",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@acala-network/chopsticks": "1.0.2",
    "@inquirer/prompts": "7.4.0",
    "@moonbeam-network/api-augment": "0.3401.2",
    "@polkadot/api": "15.9.1",
    "@polkadot/api-base": "15.9.1",
    "@polkadot/api-derive": "15.9.1",
    "@polkadot/keyring": "13.4.3",
    "@polkadot/rpc-provider": "15.9.1",
    "@polkadot/types": "15.9.1",
    "@polkadot/types-codec": "15.9.1",
    "@polkadot/util": "13.4.3",
    "@polkadot/util-crypto": "13.3.1",
    "@types/debug": "^4.1.12",
    "@types/semver": "^7.7.0",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.33",
    "@vitest/ui": "3.0.4",
    "@zombienet/utils": "0.0.26",
    "bottleneck": "2.19.5",
    "chalk": "5.4.1",
    "debug": "4.4.0",
    "ethers": "6.13.5",
    "pnpm": "10.7.1",
    "polkadot-api": "1.8.4",
    "semver": "7.7.1",
    "solc": "0.8.28",
    "tiny-invariant": "^1.3.3",
    "tsup": "8.4.0",
    "tsx": "4.19.3",
    "viem": "2.22.16",
    "vitest": "3.0.4",
    "web3": "4.16.0",
    "ws": "8.18.1",
    "yargs": "17.7.2"
  },
  "pnpm": {
    "overrides": {
      "@moonbeam-network/api-augment": "0.3401.2",
      "@polkadot/api": "15.9.1",
      "@polkadot/api-base": "15.9.1",
      "@polkadot/api-derive": "15.9.1",
      "@polkadot/keyring": "13.4.3",
      "@polkadot/rpc-provider": "15.9.1",
      "@polkadot/types": "15.9.1",
      "@polkadot/types-codec": "15.9.1",
      "@polkadot/util": "13.4.3",
      "@polkadot/util-crypto": "13.4.3",
      "@vitest/ui": "3.0.4",
      "web3": "4.16.0",
      "ethers": "6.13.5",
      "polkadot-api": "1.8.4",
      "vitest": "3.0.4",
      "viem": "2.22.16"
    }
  }
}
