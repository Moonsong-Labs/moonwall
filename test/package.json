{
  "name": "@moonwall/tests",
  "type": "module",
  "version": "5.13.2-dev.4",
  "private": true,
  "description": "Testing framework for the Moon family of projects",
  "scripts": {
    "clean": "rm -rf node_modules",
    "test-dev": "bun moonwall test 'dev_test dev_seq dev_mult'",
    "test": "bun moonwall test 'basic chopsticks'",
    "lint": "bun biome lint ./suites",
    "lint:fix": "bun biome lint ./suites --apply",
    "fmt": "biome format .",
    "fmt:fix": "biome format . --write",
    "node_test": "node --no-warnings --loader tsx --test suites/node_test/*.ts",
    "bun_test": "bun test suites/bun_test/*"
  },
  "devDependencies": {
    "@acala-network/chopsticks": "^1.2.1",
    "@biomejs/biome": "^2.1.4",
    "@inquirer/prompts": "^7.8.2",
    "@moonwall/cli": "workspace:*",
    "@moonwall/types": "workspace:*",
    "@moonwall/util": "workspace:*",
    "@openzeppelin/contracts": "5.4.0",
    "@polkadot/api": "^16.4.4",
    "@polkadot/util": "^13.5.5",
    "@types/node": "^24.2.1",
    "@types/yargs": "*",
    "@vitest/ui": "3.2.4",
    "chai": "5.2.1",
    "chalk": "5.5.0",
    "ethers": "^6.15.0",
    "solc": "0.8.30",
    "tsx": "^4.20.4",
    "typescript": "5.9.2",
    "viem": "2.33.3",
    "vitest": "3.2.4",
    "web3": "*",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "polkadot-api": "1.16.1",
    "reflect-metadata": "^0.2.0"
  }
}
