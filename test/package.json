{
  "name": "@moonwall/tests",
  "type": "module",
  "version": "5.16.3",
  "private": true,
  "packageManager": "pnpm@9.1.4",
  "description": "Testing framework for the Moon family of projects",
  "scripts": {
    "clean": "rm -rf node_modules",
    "test-dev": "pnpm moonwall test 'dev_test dev_seq dev_mult'",
    "test": "pnpm moonwall test 'basic chopsticks'",
    "lint": "pnpm biome lint ./suites",
    "lint:fix": "pnpm biome lint ./suites --apply",
    "fmt": "biome format .",
    "fmt:fix": "biome format . --write",
    "node_test": "node --no-warnings --loader tsx --test suites/node_test/*.ts",
    "bun_test": "bun test suites/bun_test/*"
  },
  "devDependencies": {
    "@acala-network/chopsticks": "^1.2.2",
    "@biomejs/biome": "^2.2.5",
    "@inquirer/prompts": "^7.8.6",
    "@moonbeam-network/api-augment": "0.3900.0",
    "@moonwall/cli": "workspace:*",
    "@moonwall/types": "workspace:*",
    "@moonwall/util": "workspace:*",
    "@openzeppelin/contracts": "5.4.0",
    "@polkadot/api": "^16.4.8",
    "@polkadot/util": "^13.5.6",
    "@types/node": "^24.7.0",
    "@types/yargs": "*",
    "@vitest/ui": "3.2.4",
    "chai": "6.2.0",
    "chalk": "^5.6.2",
    "ethers": "^6.15.0",
    "pnpm": "^10.18.0",
    "solc": "0.8.30",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "viem": "2.37.13",
    "vitest": "3.2.4",
    "web3": "*",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "polkadot-api": "1.19.2",
    "reflect-metadata": "^0.2.0"
  }
}
