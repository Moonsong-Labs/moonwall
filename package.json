{
  "name": "@moonsong-labs/moonwall-monorepo",
  "type": "module",
  "version": "0.3.0",
  "private": true,
  "description": "Testing framework for the Moon family of projects",
  "scripts": {
    "build": "bun run --filter './packages/*' build",
    "generate-types": "bun run --filter './packages/*' generate-types",
    "fmt": "biome format ./biome.json; bun run --filter './packages/*' fmt",
    "fmt:fix": "biome format ./biome.json --write; bun run --filter './packages/*' fmt:fix",
    "lint": "bun run --filter './packages/*' lint",
    "lint:fix": "bun run --filter './packages/*' lint:fix",
    "changeset": "changeset",
    "changeset:release": "sleep 1 && bun changeset publish",
    "changeset:version": "changeset version",
    "clean-all": "rm -rf node_modules && bun run --filter './packages/*' clean && rm -rf bun.lockb",
    "pristine-build": "bun run clean-all && bun i && bun run build && bun run generate-types",
    "start": "cd test && bun run moonwall",
    "display-reports": "bunx vite preview --base __vitest__ --outDir html",
    "test": "cd packages/cli && bun test && cd ../../test && bun run moonwall test dev_multi",
    "typecheck": "bun run --filter './packages/*' typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@changesets/cli": "2.29.8",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "typescript": "5.9.3"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@parcel/watcher",
    "cpu-features",
    "esbuild",
    "msgpackr-extract",
    "protobufjs",
    "sqlite3",
    "ssh2",
    "vue-demi"
  ],
  "dependencies": {
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "workspaces": [
    "packages/*",
    "docs",
    "test"
  ],
  "overrides": {
    "toml": "^3.0.0"
  }
}